{
  "appId": "io.lbry.LBRY",
  "productName": "LBRY",
  "publish": [
    {
      "provider": "s3",
      "bucket": "build.lbry.io",
      "path": "app/release",
      "region": "us-east-1"
    },
    "github"
  ],
  "protocols": [
    {
      "name": "LBRY URI",
      "schemes": ["lbry"],
      "role": "Viewer"
    }
  ],
  "nsis": {
    "perMachine": true,
    "createDesktopShortcut": "always"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      }
    ]
  },
   "linux": { 
    "target": "deb", 
    "category": "AudioVideo;Video", 
    "desktop": { 
      "MimeType": "x-scheme-handler/lbry", 
      "Exec": "/opt/LBRY/lbry %U" 
    } 
  }, 
  "deb": { 
    "depends": [ 
      "gconf2", 
      "gconf-service", 
      "libnotify4", 
      "libappindicator1", 
      "libxtst6", 
      "libnss3", 
      "libsecret-1-0" 
    ] 
  }, 
  "artifactName": "${productName}_${version}.${ext}",
  "beforeBuild": "./build/checkDaemonPlatform.js"
}
